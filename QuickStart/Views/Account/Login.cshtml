@using QuickStart.ViewModels
@model LoginViewModel

<div class="row">
    <div class="col-md-8 col-sm-7 col-xs-12">
        <section id="loginForm">

            <h4>Use a local account to sign in.</h4>
            <hr />
            <div class="visible-xs col-xs-3"></div>
            <div class="col-md-6 col-sm-12 col-xs-6">
                @Html.Partial("_LocalLoginPartial", new LoginViewModel())
                <p>
                    @Html.RouteLink("Register as a new user", "RegisterAccount")
                </p>

                <p>
                    @Html.RouteLink("Forgot your password?", "ForgotPassword")
                </p>
            </div>
        </section>
    </div>
    <div class="visible-xs clearfix"></div>
    <div class="col-md-4 col-sm-5 col-xs-12">
        <section id="socialLoginForm">
            <h4>Use another service to sign in.</h4>
            <hr />
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}